	},
	"toolbar": {
		"agent_review": false,
	},
	"agent_servers": null,

	"ui_font_family": "GoMono Nerd Font Mono",
	"buffer_font_weight": 400.0,
	"buffer_font_family": "GoMono Nerd Font Mono",

	"telemetry": {
		"diagnostics": false,
		"metrics": false,
	},

	"icon_theme": "Catppuccin Frapp√©",

